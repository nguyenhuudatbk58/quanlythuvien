<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Model.PhieuMuon" table="phieu_muon">
		<id name="id" type="int">
			<column name="id" />
			<generator class="identity" />
		</id>

		<property name="maPhieu" type="string" column="ma_phieu" />
		<property name="maThanhVien" type="string" column="ma_thanh_vien" />

		<set name="sachMuon" table="sach_muon" inverse="true"
			cascade="save-update, delete,delete-orphan" lazy="false" fetch="select">
			<key>
				<column name="phieu_muon_id" not-null="true" />
			</key>
			<one-to-many class="Model.SachMuon" />
		</set>
	</class>
</hibernate-mapping>