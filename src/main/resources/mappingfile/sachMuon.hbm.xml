<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Model.SachMuon" table="sach_muon">

		<id name="id" type="int">
			<column name="id" />
			<generator class="identity" />
		</id>

		<many-to-one name="phieuMuon" class="Model.PhieuMuon"
			fetch="select">
			<column name="phieu_muon_id" not-null="true" />
		</many-to-one>

		<property name="ngayMuon" type="calendar" column="ngay_muon" />
		<property name="ngayTra" type="calendar" column="ngay_tra" />
		<property name="maSach" type="string" column="ma_sach" />

	</class>
</hibernate-mapping>